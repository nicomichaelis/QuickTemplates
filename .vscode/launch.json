{
   // Use IntelliSense to find out which attributes exist for C# debugging
   // Use hover for the description of the existing attributes
   // For further information visit https://github.com/OmniSharp/omnisharp-vscode/blob/master/debugger-launchjson.md
   "version": "0.2.0",
   "configurations": [
        {
            "name": "Generate ./Templates",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Michaelis.QuickTemplates/bin/Debug/net6.0/Michaelis.QuickTemplates.dll",
            "args": ["--input", "${workspaceFolder}/Michaelis.QuickTemplates/templates", "--output", "${workspaceFolder}/Michaelis.QuickTemplates/Templates"],
            "cwd": "${workspaceFolder}/Michaelis.QuickTemplates",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": "Generate ./Templates > temp",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Michaelis.QuickTemplates/bin/Debug/net6.0/Michaelis.QuickTemplates.dll",
            "args": ["--input", "${workspaceFolder}/Michaelis.QuickTemplates/templates", "--output", "${workspaceFolder}/temp/Templates"],
            "cwd": "${workspaceFolder}/Michaelis.QuickTemplates",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ]
}